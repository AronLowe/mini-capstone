<head>
  <title>Your Checkout Page</title>
</head>
<body>
  <h1>Place your order, <%= @current_user.name %> </h1>
<% @carted_products.each do |carted_product| %>
  <h4><%= carted_product.product.name %></h4>
  <h4>Quantity: <%= carted_product.quantity %></h4>
  <%= form_tag "/carted_products/#{carted_product.id}", method: :delete do %>
   <input type="submit" value="Remove from cart">
<% end %>
<% end %>

<%= form_tag "/orders", method: :post do  %>
  <input type="submit" value="Buy Now">
<% end %>
